{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,        
        "target": "es6",
        "outDir": "./dist",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@pages/*": ["src/tests/page/*"]
        },
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}